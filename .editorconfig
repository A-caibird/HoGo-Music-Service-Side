root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 140
tab_width = 4

[*.less]
indent_size = 4

[*.sass]
indent_size = 4

[*.scss]
indent_size = 4

[*.vue]
indent_size = 4
tab_width = 4

[{*.bash,*.sh,*.zsh}]
indent_size = 4
tab_width = 4

[{*.har,*.jsb4,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc,jest.config}]
indent_size = 4

[{*.http,*.rest}]
indent_size = 0

[{*.yaml,*.yml}]
indent_size = 4
